RewriteEngine On
RewriteBase /

# Serve root from dist/index.html
RewriteRule ^$ dist/index.html [L]

# Serve existing files inside dist
RewriteCond %{REQUEST_FILENAME} -f
RewriteRule ^dist/(.*)$ dist/$1 [L]

# Redirect all other paths (React Router) to dist/index.html
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^(.*)$ dist/index.html [L]